# WSI ECS Logger 프로젝트 설정
# 이 파일을 terraform.tfvars로 복사하고 필요한 값들을 설정하세요

# 프로젝트 기본 설정
project_name = "wsi"
environment  = "production"

# VPC 설정
vpc_cidr = "10.10.0.0/16"
public_subnet_cidrs = ["10.10.1.0/24", "10.10.2.0/24"]
availability_zones  = ["us-east-1a", "us-east-1b"]

# 애플리케이션 설정
app_port  = 80
app_image = "YOUR_AWS_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/wsi-python-app:latest"
app_count = 2

# ECS Task 리소스 설정
cpu    = 256
memory = 512

# CloudWatch 경보 설정
cpu_threshold = 80
